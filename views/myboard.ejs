<div class="container-fluid">
      <div class="row-fluid" id="enterNameForm">
      	  <div class="hero-unit">
	      	  <h2>Welcome to Real Time Discussion Board!</h2>
	      	  <p>Please enter your nickname:</p>
	      	  
			  <input type="text" class="nickname" placeholder="Your nickname..."> 
			  <div class="msgHolder"></div>			  
			  <button id="goBtn" class="btn btn-primary">Go</button>
			   
		  </div>
      </div>
      
      <div class="row-fluid" id="progressArea" style="display: none">
      	 <h2>Please wait for server connection...</h2>
      	 <div class="progress progress-striped active">
			 <div class="bar" style="width: 100%;"></div>
		</div>
      </div>
      
      <div class="row-fluid" id="maxClientsArea" style="display: none">
      	 <div class="alert alert-error">
		  <button class="close" data-dismiss="alert">×</button>
		  <span>Max number of clients reached. Please try again later.</span>
		</div>
      </div>
      
      <div id="mainArea" style="display: none">
	      <div class="row-fluid" >
	        <div class="span12">
	        	<div class="alert alert-success">
				  <button class="close" data-dismiss="alert">×</button>
				  <span>Drag the notes or stickers below to real time board</span>
				</div>
	        	<ul id="stickies">       
	            </ul> 
	        	<ul id="notesWidgets">       
	            </ul>
	            
	           
	            <hr/>     
	        </div>
	      </div>
	      <div class="row-fluid">
	        
	       
	           <div class="span4">
	            
		            <div class="well">
			            <div class="chatHeader">Discussion</div>        
			            <div id="chatPanel">
			                
			                <ul id="messages"></ul>
			                <div>
			                	<input type="text" class="input-xlarge"  id="chatmsg" />
			                	<button id="sendBtn" class="btn btn-primary">Send</button>
			                	<div class="errBox" style="display:none">
			                		<div class="alert alert-error">
									  <button class="close" data-dismiss="alert">×</button>
									  <span>Please provide a comment</span>
									</div>
			                	</div>
			                </div>
			                
			                <div id="clientCount">
			                	<span class="userCount"></span> users are currently connected.
			                </div>
			            </div>
			        </div>
	            </div>
	             <div class="span8">
	            	<div id="boardArea"></div>
	           </div>
		      
	    </div>
	  </div>
</div>

<!-- template for success/fail message -->
<script id="errTemplate" type="text/template">
    <div class="alert alert-error">
	  <button class="close" data-dismiss="alert">×</button>
	  <span>{{msg}}</span>
	</div>
</script>

<script id="widgetTemplate" type="text/template">
	<li><img  src="{{imgPath}}" alt="{{title}}" class="{{cssClass}}" /> </li>
</script>

<!-- template for message by current user -->
<script id="chatUserTemplate" type="text/template">
	<li><span class="time">{{chatTime}}</span> <span class='user active'>{{name}}</span> <span class="message">{{msg}}</span> </li>
</script>

<script id="chatOtherUserTemplate" type="text/template">
	<li><span class="time">{{chatTime}}</span> <span class='user'>{{name}}</span> <span class="message">{{msg}}</span> </li>
</script>

<!-- template for message received from server -->
<script id="chatServerTemplate" type="text/template">
	<li class="server"><span class="time">{{chatTime}}</span> <span class='user'>{{name}}</span> <span class="message">{{msg}}</span></li>
</script>

<div class="modal hide" id="editNoteForm">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Enter your message:</h3>
  </div>
  <div class="modal-body">
    <textarea class="input-xlarge" id="noteText"></textarea>
    <div class="alert alert-error" style="display:none">
	  <button class="close" data-dismiss="alert">×</button>
	  <span class="errmsg"></span>
	</div>
    
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <a href="#" class="btn btn-primary saveBtn">Save</a>
    <a href="#" class="btn btn-danger deleteBtn" >Delete</a>
  </div>
</div>

<div class="modal hide" id="deleteForm">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Are you sure you want to delete this?</h3>
  </div>
 
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">No</a>
    <a href="#" class="btn btn-primary yesBtn">Yes</a>
   </div>
</div>

